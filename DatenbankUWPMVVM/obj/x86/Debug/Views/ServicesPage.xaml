<Page x:ConnectionId='1'
    x:Class="DatenbankUWPMVVM.Views.ServicesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:primitives="using:Microsoft.Toolkit.Uwp.UI.Controls.Primitives"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    xmlns:model="using:DatenbankUWPMVVM.Core.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <Style BasedOn="{StaticResource DataGridBodyStyle}" TargetType="TextBlock"/>
            <Style BasedOn="{StaticResource DataGridHeaderStyle}" TargetType="primitives:DataGridColumnHeader"/>
        </ResourceDictionary>
    </Page.Resources>
    <Grid x:ConnectionId='2' x:Name="ContentArea" Margin="{StaticResource SmallLeftRightMargin}">
        <Grid>
            <controls:DataGrid x:ConnectionId='3'
                x:Uid="DataTable"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                                                                    >
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Binding="{Binding ID}" Header="ID" />
                    <controls:DataGridTextColumn Binding="{Binding Service_ID}" Header="Service ID" />
                    <controls:DataGridTextColumn Binding="{Binding Hersteller}" Header="Hersteller" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_1}" Header="Lieferant 1" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_2}" Header="Lieferant 2" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_3}" Header="Lieferant 3" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_4}" Header="Lieferant 4" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_5}" Header="Lieferant 5" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_6}" Header="Lieferant 6" />
                    <controls:DataGridTextColumn Binding="{Binding Lieferant_7}" Header="Lieferant 7" />
                    <controls:DataGridTextColumn Binding="{Binding PositionsName}" CanUserResize="False" Header="Positionsname" Width="300"/>
                    <controls:DataGridTextColumn Binding="{Binding KurzName}" CanUserResize="False" Header="Kurzname" Width="300"/>
                    <controls:DataGridTextColumn Binding="{Binding LangName}" CanUserResize="False" Header="Langname" Width="300"/>
                    <controls:DataGridTextColumn Binding="{Binding Kategorie}" Header="Kategorie" />
                    <controls:DataGridTextColumn Binding="{Binding HerstellerArtikelNr}" Header="Herstellerartikelnr." />
                    <controls:DataGridTextColumn Binding="{Binding NettoStueckPreis_1}" Header="Nettostückpreis 1" />
                    <controls:DataGridTextColumn Binding="{Binding NP1U}" Header="NP1U" />
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>
    </Grid>
</Page>

